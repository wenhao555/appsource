<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white">
    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_gray_bg" />
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="终端1"
        android:textColor="@color/color_77"
        android:textSize="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/online"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="连接状态"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="在线"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_icon2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitXY"
                android:src="@drawable/wendu"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="温度"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="32℃"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_icon3"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/shidu"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="湿度"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="65%"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_icon4"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="fitXY"
                android:src="@drawable/mq2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="MQ2"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_content4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="正常"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_icon5"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/renti"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="HC-SR501"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/tv_content5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="有人"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/color_77"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_item6"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_icon6"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:src="@drawable/on"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="灯光状态"
                android:textColor="@color/color_77"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_content6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="开灯"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_77"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>